<%= render 'users/user', user: @user %>
 <h2>New book</h2>
  <%= render 'books/book', book: @book %>
   <div class="col-md-8 offset-md-1">
  	 <table class="table table-sm user-index">
	  	<h2>Users</h2>
       <thead>
        <th>image</th>
        <th>name</th>
        <th></th>
  	   </thead>
  	  <tbody>
  	   <% @users.each do |user| %>
	  	  <tr>
	  	   <td><%= attachment_image_tag user, :profile_image, :fill, 30, 30,fallback: "no_image.jpg"%></td>
	  	   <td><%= user.name %></td>
	  	   <td><%= link_to "Show", "/users/#{user.id}" %></td>
	  	  </tr>
  	   <% end %>
  	  </tbody>
  	 </table>
  	</div>
  </div>